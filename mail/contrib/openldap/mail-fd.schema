# Object Class
objectclass ( 1.3.6.1.4.1.38414.10.2.1 NAME 'mailPluginConf'
  DESC 'FusionDirectory mail plugin configuration'
  SUP top AUXILIARY
  MUST ( )
  MAY ( fdMailMethod $ fdMailAttribute $ fdMailUserCreation $ fdMailFolderCreation $
        fdCyrusUseSlashes $
        fdCyrusDeleteMailbox $ fdCyrusAutocreateFolders $ fdImapTimeout $
        fdMailSharedPrefix ) )

objectclass ( 1.3.6.1.4.1.38414.10.2.2 NAME 'fdImapServer'
  DESC 'FusionDirectory basic imap service'
  SUP top AUXILIARY
  MUST ( cn ) )

# Postfix Server description
objectclass (1.3.6.1.4.1.38414.10.2.3 NAME 'fdPostfixServer' SUP top AUXILIARY
  DESC 'Postfix server definition'
  MUST ( cn )
  MAY  ( description $ postfixHeaderSizeLimit $
         postfixMailboxSizeLimit $ postfixMessageSizeLimit $
         postfixMyDestinations $ postfixMyDomain $ postfixMyHostname $
         postfixMyNetworks $ postfixRelayhost $ postfixTransportTable $
         postfixSenderRestrictions $ postfixRecipientRestrictions ) )
