<?xml version="1.0" encoding="UTF-8"?>

<filterdef>
  <definition>
    <category>opsiProfile</category>
    <template>opsiProfile-filter.tpl</template>
    <initial>true</initial>
  </definition>

  <search>
    <query>
      <backend>LDAP</backend>
      <filter>(&amp;(objectClass=opsiProfile)$NAME)</filter>
      <attribute>dn</attribute>
      <attribute>objectClass</attribute>
      <attribute>cn</attribute>
    </query>
    <scope>one</scope>
  </search>

  <element>
    <type>textfield</type>
    <tag>NAME</tag>
    <size>20</size>
    <maxlength>60</maxlength>
    <default></default>
    <unset></unset>
    <set>(cn=*$*)</set>
    <alphabet>true</alphabet>
    <autocomplete>
      <backend>LDAP</backend>
      <filter>(&amp;(objectClass=opsiProfile)(cn=*$NAME*))</filter>
      <attribute>ou</attribute>
      <frequency>0.5</frequency>
      <characters>3</characters>
    </autocomplete>
  </element>

</filterdef>
