/* Remove locks created by this plugin
*/
$lock_msg="";
if ($remove_lock || isset($_POST['edit_cancel'])) {
  if (session::is_set('quotaAccount') && session::is_set('edit')) {
    del_lock($ui->dn);
  }
}

/* Remove this plugin from session
*/
if ( $cleanup ) {
  session::un_set('quotaAccount');
  session::un_set('edit');
} else {

  /* Reset requested? */
  if (isset($_POST['edit_cancel'])) {
    session::un_set('edit');
    session::un_set('quotaAccount');
  }

  /* Create quotaAccount object on demand */
  if (!session::is_set('quotaAccount') || (isset($_GET['reset']) && $_GET['reset'] == 1)) {
    $quotaAccount= new quotaAccount ($config, $ui->dn);
    $quotaAccount->enable_CSN_check();
    $quotaAccount->set_acl_base($ui->dn);
    $quotaAccount->set_acl_category("users");
    session::set('quotaAccount',$quotaAccount);
  }
  $quotaAccount = session::get('quotaAccount');

  /* save changes back to object */
  if (session::is_set('edit')) {
    $quotaAccount->save_object ();
  }

  /* Enter edit mode? */
  if ((isset($_POST['edit'])) && (!session::is_set('edit'))) {

    /* Check locking */
    if (($username= get_lock($ui->dn)) != "") {
      session::set('back_plugin',$plug);
      session::set('LOCK_VARS_TO_USE',array("/^edit$/","/^plug$/"));
      $lock_msg =  gen_locked_message($username, $ui->dn);

    } else {

      /* Lock the current entry */
      add_lock($ui->dn, $ui->dn);
      session::set('edit',TRUE);
    }
  }

  /* save changes to LDAP and disable edit mode */
  $info= "";
  if (isset($_POST['edit_finish'])) {

    /* Perform checks */
    $message= $quotaAccount->check();

    /* No errors, save object */
    if (count ($message) == 0) {
      $quotaAccount->save ();
      del_lock ($ui->dn);
      session::un_set('edit');

      /* Remove from session */
      session::un_set('quotaAccount');
    } else {
      /* Errors found, show message */
      msg_dialog::displayChecks($message);
    }
  }

  /* Execute formular */
  if ($lock_msg) {
    $display = $lock_msg;
  } else {
    $display.= $quotaAccount->execute();
  }

  /* Store changes  in session */
  if (session::is_set('edit')) {
    session::set('quotaAccount',$quotaAccount);
  }

  /* Show page footer depending on the mode */
#  if (!$quotaAccount->groupSelect && !$quotaAccount->trustSelect && $quotaAccount->is_account && empty($lock_msg)){

  if (!$quotaAccount->dialog && $quotaAccount->is_account && empty($lock_msg)) {
    $display.= "<p class=\"plugbottom\">";

    /* Are we in edit mode? */
    if (session::is_set('edit')) {
      $display.= "<input type=submit name=\"edit_finish\" style=\"width:80px\" value=\"".msgPool::okButton()."\">\n";
      $display.= "&nbsp;";
      $display.= "<input type=submit name=\"edit_cancel\" value=\"".msgPool::cancelButton()."\">\n";
      $info= "<img alt=\"\" align=\"middle\" src=\"".get_template_path('images/lists/locked.png').
             "\"> ".$ui->dn."&nbsp;";
    } else {
      $info= "<img alt=\"\" align=\"middle\" src=\"".get_template_path('images/lists/unlocked.png').
             "\"> ".$ui->dn."&nbsp;";

      /* Only display edit button if there is at least one attribute editable */
      if(preg_match("/r/",$ui->get_permissions($ui->dn,"users/quotaAccount"))) {
        $info.= "<img alt=\"\" align=\"middle\" src=\"".get_template_path('images/lists/on.png')."\"> ".
          msgPool::clickEditToChange();

        $display.= "<input type=submit name=\"edit\" value=\"".msgPool::editButton()."\">\n";
      }
      $display.= "<input type=\"hidden\" name=\"ignore\">\n";
    }
    $display.= "</p>\n";
  }

  /* Page header*/
  $display= print_header(get_template_path('plugins/quota/images/plugin.png'),
                         _("quota settings"), $info).$display;

}

