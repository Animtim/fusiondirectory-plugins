##
## dns-fd.schema - Needed by Fusion Directory for managing DNS
##

# Attributes
attributetype ( 1.3.6.1.4.1.38414.51.1.1 NAME 'fdDNSZoneDn'
  DESC 'FusionDirectory - dn of zones'
  EQUALITY caseIgnoreMatch
  SUBSTR caseIgnoreSubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15)

attributetype ( 1.3.6.1.4.1.38414.51.1.2 NAME 'fdDNSViewAclName'
  DESC 'FusionDirectory - DNS view ACL name'
  EQUALITY caseIgnoreMatch
  SUBSTR caseIgnoreSubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 SINGLE-VALUE)

attributetype ( 1.3.6.1.4.1.38414.51.1.3 NAME 'fdDNSViewAcl'
  DESC 'FusionDirectory - DNS view ACL content'
  EQUALITY caseIgnoreMatch
  SUBSTR caseIgnoreSubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15)

# Object Class
objectclass ( 1.3.6.1.4.1.38414.51.2.1 NAME 'fdDNSHost'
  DESC 'FusionDirectory - DNS host'
  SUP top AUXILIARY
  MUST (  )
  MAY ( fdDNSZoneDn ) )

objectclass ( 1.3.6.1.4.1.38414.51.2.2 NAME 'fdDNSView'
  DESC 'FusionDirectory - DNS view for split horizon'
  SUP top AUXILIARY
  MUST ( cn )
  MAY ( fdDNSZoneDn $ fdDNSViewAclName $ fdDNSViewAcl ) )
